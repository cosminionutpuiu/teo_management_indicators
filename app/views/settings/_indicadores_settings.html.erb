<fieldset>
  <legend><h1><%= l(:title_g1) %></h1></legend>

  <fieldset>
    <legend><h2><%= l(:first_level_g1n1) %></h2></legend>

    <table>
      <tbody>
        <tr>
          <th><%= l(:issue_type_g1n1) %></th>
          <td>
            <%= select_tag('settings[tipo_peticion_g1n1]', options_for_select(Tracker.sorted.to_a.collect{ |u| [u.name, u.id] }, @settings['tipo_peticion_g1n1']), prompt: I18n.t("field_Seleccionar")) %>
          </td>
        </tr>
        <tr>
          <th><%= l(:issue_status_g1n1) %></th>
